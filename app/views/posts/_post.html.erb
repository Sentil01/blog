<div id="<%= dom_id post %>">
  <% if post.cover_picture.attached? %>
    <%= image_tag post.cover_picture  %>
  <%end %>

  <p>
    <strong>Title:</strong>
    <%= post.title %>
  </p>

  <p>
    <strong>Body:</strong>
    <%= post.body %>
  </p>

  <p>
    <strong>Created By:</strong>
    <%= post.user.email if post.user %>
  </p>


</div>
